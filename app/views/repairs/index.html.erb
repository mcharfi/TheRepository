<h1>Listing repairs</h1>

<table>
  <tr>
    <th>Day</th>
    <th>Name</th>
    <th>Email</th>
    <th>Number</th>
    <th>Oncampus</th>
    <th>Location</th>
    <th>Device</th>
    <th>Opsystem</th>
    <th>Issue</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @repairs.each do |repair| %>
  <tr>
    <td><%= repair.day %></td>
    <td><%= repair.name %></td>
    <td><%= repair.email %></td>
    <td><%= repair.number %></td>
    <td><%= repair.oncampus %></td>
    <td><%= repair.location %></td>
    <td><%= repair.device %></td>
    <td><%= repair.opsystem %></td>
    <td><%= repair.issue %></td>
    <td><%= link_to 'Show', repair %></td>
    <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
    <td><%= link_to 'Destroy', repair, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

